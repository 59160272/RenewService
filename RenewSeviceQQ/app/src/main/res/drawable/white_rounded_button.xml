<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#2A2E43"/>
            <stroke
                android:color="@color/white"
                android:width="1dp"/>
            <corners
                android:radius="50dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#3E435D"/>
            <stroke
                android:color="@color/grey"
                android:width="1dp"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>


</selector>
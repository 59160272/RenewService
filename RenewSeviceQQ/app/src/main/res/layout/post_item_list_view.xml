<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/tvViewPost"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/postview"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/image_viewpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvpost_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/image_viewpost"
                android:fontFamily="@font/kanit"
                android:text="Renovate House"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvpost_provice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpost_topic"
                android:layout_marginStart="22dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/image_viewpost"
                android:fontFamily="@font/kanit"
                android:text="ชลบุรี"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvpost_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpost_topic"
                android:layout_marginStart="-74dp"
                android:layout_marginTop="48dp"
                android:layout_toEndOf="@+id/image_viewpost"
                android:fontFamily="@font/kanit"
                android:textColor="@color/colorPrimary"
                android:text="Lorem ipsum dolor sit amet, soluta regione urbanitas vis in, qui elit populo ut. "
                android:textSize="18sp" />
        </RelativeLayout>





    </androidx.cardview.widget.CardView>
</LinearLayout>

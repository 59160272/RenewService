<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1">

        <include layout='@layout/layout_top_tabs'/>

        <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:id="@+id/backAccount"
        android:src="@drawable/baseline_arrow_back_white_24dp"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="125dp"
            android:fontFamily="@font/kanit"
            android:text="โปรไฟล์ช่างของฉัน"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="@font/kanit"
        android:gravity="center_horizontal"
        android:layout_marginBottom="350dp"
        android:text="ไม่มีข้อมูลโปรไฟล์ช่าง"
        android:id="@+id/hideTextViewTech"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView_TechPFListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        tools:listitem="gone"/>

</FrameLayout>
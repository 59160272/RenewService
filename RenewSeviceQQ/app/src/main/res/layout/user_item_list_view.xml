<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/tvViewPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#F6F6F6"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#F7FBFD">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ScTech_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/ScTech_Name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ScTech_Img"
                android:fontFamily="@font/kanit"
                android:maxLines="1"
                android:text="บริษัท กรู่เมต์"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ScTech_cag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ScTech_Name"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/ScTech_Img"
                android:fontFamily="@font/kanit"
                android:text="สถาปนานิกและออกแบบ"
                android:textColor="#4A5179"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ScTech_provice"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ScTech_Name"
                android:layout_marginStart="24dp"
                android:layout_marginTop="27dp"
                android:layout_toEndOf="@+id/ScTech_Img"
                android:fontFamily="@font/kanit"
                android:maxLines="1"
                android:text="ชลบุรี"
                android:textColor="#4A5179"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ScTech_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ScTech_provice"
                android:layout_marginStart="-76dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/ScTech_Img"
                android:background="#F6F6F6"
                android:fontFamily="@font/kanit"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="Lorem ipsum dolor sit amet, soluta regione urbanitas vis in, qui elit populo ut. "
                android:textColor="#4A5179"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ScTech_desc"
                android:layout_marginStart="-76dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/ScTech_Img"
                android:fontFamily="@font/kanit"
                android:gravity="left"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="ดูโปรไฟล์ช่าง"
                android:textColor="@color/primary_dark"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ScTech_Keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ScTech_provice"
                android:layout_marginStart="-76dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/ScTech_desc"
                android:background="#F6F6F6"
                android:fontFamily="@font/kanit"
                android:maxLines="2"
                android:visibility="gone"
                android:paddingStart="10dp"
                android:text="Lorem ipsum dolor sit amet, soluta regione urbanitas vis in, qui elit populo ut. "
                android:textColor="#4A5179"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/blog_comment_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/logore3"
                android:visibility="gone"


                />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
